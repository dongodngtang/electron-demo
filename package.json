{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "My electron app",
  "productName": "贝尔测试",
  "main": "main.js",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "webpack --mode production",
    "buildMain": "webpack --config=webpack.main.config.js --mode=production",
    "dev": "concurrently \"wait-on http://localhost:3000 && electron .\" \"npm start\"",
    "ele": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "cross-env GH_TOKEN=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 electron-builder",
    "prerelease": "npm run build && npm run buildMain",
    "prepack": "npm run build && npm run buildMain"
  },
  "keywords": [],
  "author": {
    "name": "bell.ai",
    "email": "ailuo8899@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dongodngtang/electron-demo.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.0.1",
    "cross-env": "^7.0.3",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-updater": "^4.3.8",
    "html-webpack-plugin": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "wait-on": "^5.3.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.3"
  },
  "build": {
    "appId": "bell.ai.app.test",
    "productName": "贝尔AI",
    "asar": false,
    "copyright": "Copyright © 2021 ${author}",
    "files": [
      "build/**/*",
      "preload.js",
      "package.json"
    ],
    "publish": [
      "github"
    ],
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "directories": {
      "buildResources": "asset"
    },
    "mac": {
      "category": "public.app-category.producivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "asset/app.icns"
    },
    "dmg": {
      "background": "asset/appdmg.png",
      "icon": "asset/app.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Application"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "asset/icon.ico",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "publisherName": "Luo CD"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  }
}
